{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tDiary-contrib",
            "type": "Ruby",
            "request": "launch",
            "cwd": "/usr/src/app",
            "program": "/usr/src/app/bin/tdiary",
            "env": {
                "HTPASSWD": "${workspaceRoot}/data/.htpasswd"
            },
            "args": [
                "server", "-p", "9292"
            ],
            "useBundler": true
        },
        {
            "name": "RSpec - all",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "bundle",
            "args": [
                "exec", "rake", "spec"
            ],
            "useBundler": true
        }
    ]
}
